<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Swift" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="MyTabTextStyle" parent="@style/TextAppearance.Design.Tab">
        <!-- 폰트 설정 (Custom Font) -->
        <item name="android:fontFamily">@font/pretend_semibold</item>
        <!-- 텍스트 크기 -->
        <item name="android:textSize">16sp</item>
        <!-- 기본 텍스트 색상 (선택) -->
        <item name="android:textColor">@color/gray_scale_10</item>
    </style>

</resources>