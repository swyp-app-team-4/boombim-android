<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Swift" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="MyTabTextStyle" parent="@style/TextAppearance.Design.Tab">
        <!-- 폰트 설정 (Custom Font) -->
        <item name="android:fontFamily">@font/pretend_semibold</item>
        <!-- 텍스트 크기 -->
        <item name="android:textSize">16sp</item>
        <!-- 기본 텍스트 색상 (선택) -->
        <item name="android:textColor">@color/gray_scale_10</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheet</item>
    </style>

    <style name="RoundedBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_white_20</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/toggle_track</item>
        <item name="android:thumb">@drawable/toggle_thumb</item>
        <item name="showText">false</item>
        <item name="switchMinWidth">36dp</item>
        <item name="switchPadding">0dp</item>
        <item name="thumbTextPadding">0dp</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_scale_5</item>
        <item name="colorControlActivated">@color/main_color</item>
    </style>


</resources>