<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_korea_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_korea_mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_korea_ministry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="국토교통부"
        android:textSize="12sp"
        android:fontFamily="@font/pretend_medium"
        android:textColor="#70737C"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_korea_mark"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "강남역 집회 예정"
        android:textColor="#0F0F10"
        android:fontFamily="@font/pretend_semibold"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/text_korea_ministry"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "강남역 집회 예정강남역 집회 예정강남역 집회 예정강남역 집회 예정강남역 집회 예정강남역 집회 예정"
        android:textColor="#70737C"
        android:fontFamily="@font/pretend_regular"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>