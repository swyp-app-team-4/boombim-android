<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vote_card"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_no_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 특별한 이슈가 없습니다"
        android:textColor="@color/gray_scale_8"
        android:textSize="14sp"
        android:fontFamily="@font/pretend_regular"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_korea_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_police_mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_korea_ministry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울경찰청 제공"
        android:textSize="12sp"
        android:fontFamily="@font/pretend_medium"
        android:textColor="#70737C"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_korea_mark"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "강남역 집회 예정"
        android:textColor="#0F0F10"
        android:fontFamily="@font/pretend_semibold"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/text_korea_ministry"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "강남역 집회 예정강남역 집회 예정강남역 집회 예정강남역 집회 예정강남역 집회 예정강남역 집회 예정"
        android:textColor="#70737C"
        android:fontFamily="@font/pretend_regular"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:lineSpacingExtra="3dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>