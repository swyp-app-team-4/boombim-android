<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="15dp"
                android:src="@drawable/icon_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/pretend_semibold"
                android:text="오픈 서울"
                android:textColor="@color/gray_scale_10"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:padding="11dp"
                android:src="@drawable/icon_star"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretend_semibold"
                android:textColor="@color/gray_scale_10"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_back"
                tools:text="강남 스벅" />


            <ImageView
                android:id="@+id/icon_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_clock"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/text_place_name"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="14분전"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/gray_scale_9"
                android:fontFamily="@font/pretend_regular"
                app:layout_constraintTop_toTopOf="@id/icon_clock"
                app:layout_constraintStart_toEndOf="@id/icon_clock"/>

            <TextView
                android:id="@+id/text_place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretend_semibold"
                android:textColor="@color/gray_scale_8"
                android:textSize="14sp"
                tools:text="서울특별시 강남로 331"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/icon_clock"
                app:layout_constraintStart_toEndOf="@id/text_update_time"/>

            <ImageView
                android:id="@+id/icon_boombim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_busy_small"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_back"/>


            <ImageView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_clock" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="30dp"
                android:background="#ECECEC"
                app:layout_constraintTop_toBottomOf="@id/map_view" />



            <LinearLayout
                android:id="@+id/demographics_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_vote_card"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text_demographics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/pretend_semibold"
                    android:text="인구통계"
                    android:textColor="@color/gray_scale_9"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/pretend_medium"
                    android:text="성별"
                    android:textColor="@color/gray_scale_9"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_demographics"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/male_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/text_sex">

                    <TextView
                        android:id="@+id/text_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretend_regular"
                        android:text="남성"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/progress_male"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="190dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="22dp"
                        android:max="100"
                        android:progress="55"
                        android:progressDrawable="@drawable/bg_gray_progress_bar"/>

                    <TextView
                        android:id="@+id/text_male_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pretend_regular"
                        tools:text="45%"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/female_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/male_container">

                    <TextView
                        android:id="@+id/text_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretend_regular"
                        android:text="여성"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/progress_female"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="190dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="22dp"
                        android:max="100"
                        android:progress="55"
                        android:progressDrawable="@drawable/bg_gray_progress_bar"/>

                    <TextView
                        android:id="@+id/text_female_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pretend_regular"
                        tools:text="45%"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_residence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/pretend_medium"
                    android:text="거주지"
                    android:textColor="@color/gray_scale_9"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/female_container"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/stay_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/text_residence">

                    <TextView
                        android:id="@+id/text_stay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretend_regular"
                        android:text="상주"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/progress_stay"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="190dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="22dp"
                        android:max="100"
                        android:progress="55"
                        android:progressDrawable="@drawable/bg_gray_progress_bar"/>

                    <TextView
                        android:id="@+id/text_stay_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pretend_regular"
                        tools:text="45%"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/un_stay_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/stay_container">

                    <TextView
                        android:id="@+id/text_un_stay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretend_regular"
                        android:text="비상주"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/progress_un_stay"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="190dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="55"
                        android:progressDrawable="@drawable/bg_gray_progress_bar"/>

                    <TextView
                        android:id="@+id/text_un_stay_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pretend_regular"
                        tools:text="45%"
                        android:textColor="@color/gray_scale_8"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/age_percentage_include"
                layout="@layout/item_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/demographics_container"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
