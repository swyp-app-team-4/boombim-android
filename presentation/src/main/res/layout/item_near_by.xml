<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_10"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="강남 스벅" />

    <ImageView
        android:id="@+id/icon_clock"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:src="@drawable/icon_clock"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_place_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14분전"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/gray_scale_9"
        android:fontFamily="@font/pretend_regular"
        app:layout_constraintTop_toTopOf="@id/icon_clock"
        app:layout_constraintStart_toEndOf="@id/icon_clock"/>

    <TextView
        android:id="@+id/text_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_8"
        android:textSize="12sp"
        tools:text="서울특별시 강남로 331"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/icon_clock"
        app:layout_constraintStart_toEndOf="@id/text_update_time"/>

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_8"
        android:textSize="12sp"
        tools:text="0.3Km"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/icon_clock"
        app:layout_constraintStart_toEndOf="@id/text_place_address"/>

    <ImageView
        android:id="@+id/icon_boombim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_busy_small"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_place"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bg_radius_10"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_place_address"
        tools:ignore="UnusedAttribute" />




</androidx.constraintlayout.widget.ConstraintLayout>