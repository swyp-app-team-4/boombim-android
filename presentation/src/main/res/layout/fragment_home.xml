<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_broadcast"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_broadcast"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/text_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역 소식"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="#0F0F10"
        android:textSize="17sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_broadcast"
        app:layout_constraintStart_toEndOf="@id/icon_broadcast"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerRegionNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_broadcast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsSize="6dp"
        app:dotsColor="@color/gray_scale_4"
        app:selectedDotColor="@color/gray_scale_9"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/viewPagerRegionNews"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_less_boom_bim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pretend_semibold"
        android:text="지금 여기가 덜 붐벼요!"
        android:textColor="@color/gray_scale_10"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dotsIndicator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_less_boom_bim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_less_boom_bim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>