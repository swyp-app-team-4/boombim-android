<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_left"
            android:padding="15dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트"
            android:textSize="16sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_10"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/event1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/event1"
            app:layout_constraintTop_toBottomOf="@id/icon_back" />

        <ImageView
            android:id="@+id/event2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/event2"
            app:layout_constraintTop_toBottomOf="@id/event1" />

        <LinearLayout
            android:id="@+id/button_buy_ticket"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_radius_30_background_blue"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="@id/event2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="응모권 구매하기"
                android:textColor="@color/white"
                android:stateListAnimator="@null"
                android:textSize="16sp"
                android:fontFamily="@font/pretend_semibold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_point_20"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/event3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/event3"
            app:layout_constraintTop_toBottomOf="@id/event2" />

        <LinearLayout
            android:id="@+id/btn_buy_ticket"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_radius_14"
            android:backgroundTint="#FAFAFA"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/btn_alert_congestion"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="획득한 응모권"
                    android:fontFamily="@font/pretend_medium"
                    android:textColor="@color/gray_scale_9"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_current_tickets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0장"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/pretend_semibold"
                    android:textColor="@color/gray_scale_9"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EAEBEC"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 포인트"
                    android:fontFamily="@font/pretend_medium"
                    android:textColor="@color/gray_scale_9"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_current_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0point"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/pretend_semibold"
                    android:textColor="@color/gray_scale_9"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_alert_congestion"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_radius_30_background_blue"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="@id/event3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혼잡도 알리고"
                android:textColor="@color/white"
                android:stateListAnimator="@null"
                android:textSize="16sp"
                android:fontFamily="@font/pretend_semibold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_point_10_blue"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/event4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/event4"
            app:layout_constraintTop_toBottomOf="@id/event3"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
