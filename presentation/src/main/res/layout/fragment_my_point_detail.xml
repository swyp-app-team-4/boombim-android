<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/icon_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_point_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="포인트 내역"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_point_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon_back"
        android:background="@drawable/bg_vote_card"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_point_you_have"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보유 포인트"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_8"
            android:fontFamily="@font/pretend_medium"
            android:layout_marginStart="26dp"
            android:layout_marginTop="26dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1,000"
                android:textSize="22sp"
                android:fontFamily="@font/pretend_semibold"
                android:textColor="@color/main_color"
                android:layout_marginTop="2dp"
                android:layout_marginStart="26dp"
                app:layout_constraintTop_toBottomOf="@id/text_point_you_have"
                app:layout_constraintStart_toStartOf="@id/text_point_you_have"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:layout_marginStart="2dp"
                android:textSize="22sp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/pretend_semibold"
                android:textColor="@color/gray_scale_7"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_point"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_event_apply"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="이벤트 응모하기"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:fontFamily="@font/pretend_medium"
                android:background="@drawable/bg_radius_8_stroke_main_color"
                android:stateListAnimator="@null"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="포인트 모으기"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:fontFamily="@font/pretend_medium"
                android:background="@drawable/bg_radius_8_stroke_main_color"
                android:stateListAnimator="@null"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="14dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_all"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/tab_background_selector"
        android:fontFamily="@font/pretend_regular"
        android:text="전체"
        android:gravity="center"
        android:textColor="@color/tab_text_selector"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_point_card" />

    <TextView
        android:id="@+id/text_get_history"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:text="적립내역"
        android:gravity="center"
        android:background="@drawable/tab_background_selector"
        android:fontFamily="@font/pretend_regular"
        android:textColor="@color/tab_text_selector"
        android:textSize="14sp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/text_all"
        app:layout_constraintTop_toBottomOf="@+id/layout_point_card"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:text="사용내역"
        android:gravity="center"
        android:background="@drawable/tab_background_selector"
        android:fontFamily="@font/pretend_regular"
        android:textColor="@color/tab_text_selector"
        android:textSize="14sp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/text_get_history"
        app:layout_constraintTop_toBottomOf="@+id/layout_point_card"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_point_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>