<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_left"
        android:padding="15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴하기"
        android:textSize="16sp"
        android:fontFamily="@font/pretend_medium"
        android:textColor="@color/gray_scale_10"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_withdraw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 탈퇴하시겠어요?"
        android:textSize="22sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/icon_close"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_withdraw_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금까지 작성한 모든 정보가 사라집니다. \n소중한 의견을 받아 더 나은 서비스를 만들어갈게요."
        android:textSize="14sp"
        android:textColor="@color/gray_scale_8"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_withdraw_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_reasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/text_withdraw_subtitle">

        <CheckBox
            android:id="@+id/cb_reason1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_regular"
            android:buttonTint="@color/selector_checkbox_color"
            android:text="자주 이용하지 않아요" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <CheckBox
            android:id="@+id/cb_reason2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_regular"
            android:buttonTint="@color/selector_checkbox_color"
            android:text="기능이 불편해요" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <CheckBox
            android:id="@+id/cb_reason3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_regular"
            android:buttonTint="@color/selector_checkbox_color"
            android:text="서비스가 불편해요" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <CheckBox
            android:id="@+id/cb_reason4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_regular"
            android:buttonTint="@color/selector_checkbox_color"
            android:text="신규 계정으로 가입할래요" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <CheckBox
            android:id="@+id/cb_reason5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_regular"
            android:buttonTint="@color/selector_checkbox_color"
            android:text="개인 정보가 우려돼요" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"/>

        <CheckBox
            android:id="@+id/cb_reason6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_regular"
            android:buttonTint="@color/selector_checkbox_color"
            android:text="기타" />

    </LinearLayout>

    <EditText
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="자유롭게 작성해주세요."
        android:textSize="14sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="@color/gray_scale_7"
        android:gravity="top"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:background="@drawable/bg_rounded_radius8_gray3"
        app:layout_constraintTop_toBottomOf="@id/layout_reasons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_withdraw"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_rounded_main_color"
        android:text="탈퇴하기"
        android:fontFamily="@font/pretend_medium"
        android:textColor="@color/gray_scale_1"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>