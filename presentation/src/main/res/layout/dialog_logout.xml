<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="150dp"
    android:background="@drawable/bg_vote_dialog"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃 하시겠습니까?"
            android:textSize="18sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_9"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_vote_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이후 모바일을 통해 재인증 후 이용이 가능합니다."
            android:textSize="12sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_9"
            app:layout_constraintStart_toEndOf="@id/text_vote_asking"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_no"
        android:layout_width="131dp"
        android:layout_height="44dp"
        android:background="@drawable/icon_no_btn"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_text_container"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_yes"
        android:layout_width="131dp"
        android:layout_height="44dp"
        android:background="@drawable/icon_yes_button"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/layout_text_container"
        app:layout_constraintTop_toBottomOf="@id/layout_text_container"/>


</androidx.constraintlayout.widget.ConstraintLayout>