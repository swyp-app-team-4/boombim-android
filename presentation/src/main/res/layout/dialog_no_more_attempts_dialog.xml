<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="150dp"
    android:background="@drawable/bg_vote_dialog"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_ticket_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="내일 다시 도전해 보세요!"
            android:textSize="18sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_9"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_vote_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하루에 최대 5개의 응모권을 구매할 수 있어요"
            android:textSize="12sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_7"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="확인"
        android:textSize="14sp"
        android:stateListAnimator="@null"
        android:textColor="@color/gray_scale_1"
        android:fontFamily="@font/pretend_medium"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/bg_rounded_main_color"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_text_container"/>


</androidx.constraintlayout.widget.ConstraintLayout>