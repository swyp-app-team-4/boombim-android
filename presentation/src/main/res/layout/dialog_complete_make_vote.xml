<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_vote_dialog"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="박환"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_9"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_7"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_nick_name"/>

    <TextView
        android:id="@+id/text_boombim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혼잡도 질문이 올라갔어요!"
        android:textSize="18sp"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_7"
        app:layout_constraintTop_toBottomOf="@id/text_nick_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/image_celebrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_celebrate"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_boombim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_rounded_main_color"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretend_medium"
        android:stateListAnimator="@null"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/image_celebrate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>