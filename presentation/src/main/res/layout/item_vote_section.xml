<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_date_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025. 08. 14"
        android:textColor="@color/gray_scale_8"
        android:fontFamily="@font/pretend_semibold"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_date_section"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>