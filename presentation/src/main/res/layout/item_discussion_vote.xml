<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/overlap_images_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/img_place"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_img_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_gray_circle"
            android:scaleType="centerCrop"
            android:layout_gravity="start"/>

        <ImageView
            android:id="@+id/user_img_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_gray_circle"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_gravity="start"/>

        <ImageView
            android:id="@+id/user_img_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_gray_circle"
            android:scaleType="centerCrop"
            android:layout_marginStart="30dp"
            android:layout_gravity="start"/>
    </FrameLayout>

    <TextView
        android:id="@+id/text_people_interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="8"
        android:fontFamily="@font/pretend_semibold"
        android:textSize="12sp"
        android:textColor="@color/main_color"
        android:layout_marginTop="18dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/overlap_images_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명이 궁금해하고 있어요"
        android:textSize="12sp"
        android:textColor="@color/gray_scale_8"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_people_interests"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4분전"
        android:textSize="12sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="@color/gray_scale_8"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@id/img_place"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="지금 '강남 교보문구' 어때요?"
        android:textSize="18sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        app:layout_constraintTop_toBottomOf="@id/overlap_images_container"
        app:layout_constraintStart_toStartOf="@id/img_place"/>

    <ImageView
        android:id="@+id/img_place"
        android:layout_width="295dp"
        android:layout_height="115dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"/>

    <ImageView
        android:id="@+id/img_calm"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_calm_v1"
        app:layout_constraintStart_toStartOf="@+id/img_place"
        app:layout_constraintTop_toBottomOf="@id/img_place" />

    <ImageView
        android:id="@+id/img_normal"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_normal_v1"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img_calm"
        app:layout_constraintTop_toBottomOf="@id/img_place"/>

    <ImageView
        android:id="@+id/icon_slightly_busy"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_slightly_busy_v1"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img_normal"
        app:layout_constraintTop_toBottomOf="@id/img_place"/>

    <ImageView
        android:id="@+id/icon_busy"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_busy_v1"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/icon_slightly_busy"
        app:layout_constraintTop_toBottomOf="@id/img_place"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_vote"
        android:layout_width="295dp"
        android:layout_height="44dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_calm"
        app:layout_constraintTop_toBottomOf="@id/img_calm"/>






</androidx.constraintlayout.widget.ConstraintLayout>