<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_setting"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icon_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_edit_profile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_mypage"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김붐빔"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/icon_profile"
        app:layout_constraintStart_toEndOf="@id/icon_profile"/>

    <TextView
        android:id="@+id/text_vote_count"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="투표 | 8"
        android:textColor="@color/gray_scale_8"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/bg_rounded_gray3"
        android:fontFamily="@font/pretend_medium"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_profile"
        app:layout_constraintStart_toEndOf="@id/icon_profile"/>

    <TextView
        android:id="@+id/text_my_vote_count"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="질문 | 8"
        android:textColor="@color/gray_scale_8"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/bg_rounded_gray3"
        android:fontFamily="@font/pretend_medium"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_profile"
        app:layout_constraintStart_toEndOf="@id/text_vote_count"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/MyTabTextStyle"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorHeight="1.5dp"
        app:tabIndicatorFullWidth="true"
        app:tabTextColor="@color/gray_scale_8"
        app:tabSelectedTextColor="@color/gray_scale_10"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/icon_profile">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 투표" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 질문" />
    </com.google.android.material.tabs.TabLayout>



</androidx.constraintlayout.widget.ConstraintLayout>