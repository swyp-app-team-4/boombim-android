<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_setting"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icon_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_edit_profile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_mypage"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김붐빔"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/icon_profile"
        app:layout_constraintStart_toEndOf="@id/icon_profile"/>



</androidx.constraintlayout.widget.ConstraintLayout>