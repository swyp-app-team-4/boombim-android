<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icon_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_setting"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_mypage"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pencil"
        app:layout_constraintEnd_toEndOf="@id/icon_profile"
        app:layout_constraintBottom_toBottomOf="@id/icon_profile"/>

    <TextView
        android:id="@+id/text_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="김붐빔"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/icon_profile"
        app:layout_constraintTop_toTopOf="@id/icon_profile"
        app:layout_constraintBottom_toBottomOf="@id/icon_profile"/>



    <LinearLayout
        android:id="@+id/container_point"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@drawable/bg_vote_card"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/icon_profile"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/pretend_semibold"
            android:textSize="16sp"
            android:textColor="@color/main_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:gravity="center"
            android:fontFamily="@font/pretend_medium"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:textColor="@color/gray_scale_8"
            android:layout_marginStart="3dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/container_point_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포인트 내역"
                android:gravity="center"
                android:fontFamily="@font/pretend_medium"
                android:textSize="14sp"
                android:textColor="@color/gray_scale_8"
                android:layout_marginStart="14dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_left_arrow"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/gray_scale_8"/>

        </LinearLayout>



    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/MyTabTextStyle"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorHeight="1.5dp"
        app:tabIndicatorFullWidth="true"
        app:tabTextColor="@color/gray_scale_8"
        app:tabSelectedTextColor="@color/gray_scale_10"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/container_point">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="활동 기록" />
    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/flame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />



</androidx.constraintlayout.widget.ConstraintLayout>