<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_vote_dialog"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="국회의사당역"
            android:textSize="18sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_9"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_vote_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도 알리기 완료!"
            android:textSize="18sp"
            android:fontFamily="@font/pretend_medium"
            android:textColor="@color/gray_scale_7"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:src="@drawable/image_congratuation"
            android:layout_marginTop="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 바로 지도에서 핀을 확인해보세요!"
            android:textSize="18sp"
            android:fontFamily="@font/pretend_medium"
            android:textColor="@color/gray_scale_9"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="확인"
        android:textSize="14sp"
        android:stateListAnimator="@null"
        android:textColor="@color/gray_scale_1"
        android:fontFamily="@font/pretend_medium"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/bg_rounded_main_color"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_text_container"/>


</androidx.constraintlayout.widget.ConstraintLayout>