<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알리기"
            android:textSize="16sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_semibold"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_current_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@id/text_profile"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_clock"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/icon_clock" />

            <TextView
                android:id="@+id/text_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 시각"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:textColor="@color/gray_scale_10"
                android:fontFamily="@font/pretend_medium"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.06.15 오후 2시"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/gray_scale_8"
                android:fontFamily="@font/pretend_regular"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/layout_current_time"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_marker_white"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 위치"
                android:layout_marginStart="7dp"
                android:layout_gravity="center"
                android:textColor="@color/gray_scale_10"
                android:fontFamily="@font/pretend_medium"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="장소를 입력해주세요"
            android:textSize="14sp"
            android:fontFamily="@font/pretend_medium"
            android:textColor="#989BA2"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_rounded_radius10_gray4"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:drawableLeft="@drawable/icon_search_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_current_location"/>

        <TextView
            android:id="@+id/text_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="강남 스벅"
            android:textSize="20sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_9"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchView"/>

        <TextView
            android:id="@+id/text_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="서울특별시 강남로 331"
            android:textSize="14sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_8"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_place_name"/>

        <com.kakao.vectormap.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_radius_14"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/text_place_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_flex_politics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/map_view"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_flex_politics"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혼잡도를 투표해주세요"
                android:layout_marginStart="7dp"
                android:layout_gravity="center"
                android:textColor="@color/gray_scale_10"
                android:fontFamily="@font/pretend_medium"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_calm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_calm_v1"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/searchView"
            app:layout_constraintTop_toBottomOf="@id/layout_flex_politics" />

        <ImageView
            android:id="@+id/img_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_normal_v1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/img_calm"
            app:layout_constraintTop_toBottomOf="@id/layout_flex_politics"/>

        <ImageView
            android:id="@+id/icon_slightly_busy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_slightly_busy_v1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/img_normal"
            app:layout_constraintTop_toBottomOf="@id/layout_flex_politics"/>

        <ImageView
            android:id="@+id/icon_busy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_busy_v1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/icon_slightly_busy"
            app:layout_constraintTop_toBottomOf="@id/layout_flex_politics"/>

        <EditText
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="주변 상황 설명을 남겨주세요."
            android:textSize="14sp"
            android:fontFamily="@font/pretend_regular"
            android:textColor="@color/gray_scale_7"
            android:gravity="top"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/bg_rounded_radius8_gray3"
            app:layout_constraintTop_toBottomOf="@id/img_calm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_how_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떻게 알려야할지 모르겠다면?"
            android:textSize="12sp"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_medium"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/text_content"
            app:layout_constraintStart_toStartOf="@id/text_content"/>

        <ImageView
            android:id="@+id/icon_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_i"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/text_how_to"
            app:layout_constraintStart_toStartOf="@id/text_how_to"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 작성하기는 1회만 가능합니다"
            android:textColor="@color/gray_scale_7"
            android:fontFamily="@font/pretend_regular"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/text_how_to"
            app:layout_constraintStart_toEndOf="@id/icon_i"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_make_ai"
            android:layout_width="107dp"
            android:layout_height="36dp"
            android:text="Ai로 작성하기"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            android:textColor="@color/gray_scale_1"
            android:fontFamily="@font/pretend_medium"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_rounded_main_color"
            app:layout_constraintTop_toTopOf="@id/text_how_to"
            app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_radius_30_background_main_color"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_make_ai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혼잡도 알리기"
                android:textColor="@color/white"
                android:stateListAnimator="@null"
                android:textSize="14sp"
                android:fontFamily="@font/pretend_medium"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_point"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>