<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/icon_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알리기"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_current_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/icon_back"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_clock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_clock" />

        <TextView
            android:id="@+id/text_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 시각"
            android:layout_marginStart="4dp"
            android:layout_gravity="center"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_medium"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.06.15 오후 2시"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@color/gray_scale_8"
            android:fontFamily="@font/pretend_regular"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_current_time"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_marker_white"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 위치"
            android:layout_marginStart="7dp"
            android:layout_gravity="center"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_medium"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/searchView"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_search_conjestion"
        android:layout_marginTop="10dp"
        style="@style/SearchViewStyle"
        android:background="@drawable/bg_round_radius"
        app:iconifiedByDefault="false"
        app:queryHint="혼잡도를 작성할 장소를 입력해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_current_location"/>

    <TextView
        android:id="@+id/text_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="강남 스벅"
        android:textSize="20sp"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_9"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView"/>

    <TextView
        android:id="@+id/text_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="서울특별시 강남로 331"
        android:textSize="14sp"
        android:fontFamily="@font/pretend_semibold"
        android:textColor="@color/gray_scale_8"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_place_name"/>

    <com.kakao.vectormap.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_place_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_flex_politics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/map_view"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_flex_politics"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도를 투표해주세요"
            android:layout_marginStart="7dp"
            android:layout_gravity="center"
            android:textColor="@color/gray_scale_10"
            android:fontFamily="@font/pretend_medium"
            android:textSize="16sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_calm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_calm_v1"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/searchView"
        app:layout_constraintTop_toBottomOf="@id/layout_flex_politics" />

    <ImageView
        android:id="@+id/img_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_normal_v1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/img_calm"
        app:layout_constraintTop_toBottomOf="@id/layout_flex_politics"/>

    <ImageView
        android:id="@+id/icon_slightly_busy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_slightly_busy_v1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/img_normal"
        app:layout_constraintTop_toBottomOf="@id/layout_flex_politics"/>

    <ImageView
        android:id="@+id/icon_busy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_busy_v1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/icon_slightly_busy"
        app:layout_constraintTop_toBottomOf="@id/layout_flex_politics"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="주변 상황 설명을 남겨주세요."
        android:textSize="14sp"
        android:fontFamily="@font/pretend_regular"
        android:textColor="@color/gray_scale_7"
        android:gravity="top"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:background="@drawable/bg_rounded_radius8_gray3"
        app:layout_constraintTop_toBottomOf="@id/img_calm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>