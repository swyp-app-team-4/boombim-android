<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_place"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="강남 교보문고"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/pretend_medium"
            android:textColor="@color/gray_scale_9"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/image_place"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="약간붐빔"
            android:background="@drawable/bg_rounded_radius8_gray3"
            android:textSize="12sp"
            android:textColor="@color/gray_scale_7"
            android:fontFamily="@font/pretend_medium"/>

        <TextView
            android:id="@+id/text_people_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_rounded_radius8_gray3"
            android:text="23명"
            android:textSize="12sp"
            android:textColor="@color/gray_scale_7"
            android:fontFamily="@font/pretend_medium"
            android:layout_marginStart="6dp"/>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>