<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:background="@drawable/bg_vote_card"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/overlap_images_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:src="@drawable/icon_gray_circle"
            android:scaleType="centerCrop"
            android:layout_gravity="start"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_gray_circle"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_gravity="start"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_gray_circle"
            android:scaleType="centerCrop"
            android:layout_marginStart="30dp"
            android:layout_gravity="start"/>
    </FrameLayout>

    <TextView
        android:id="@+id/text_people_interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="8"
        android:fontFamily="@font/pretend_semibold"
        android:textSize="12sp"
        android:textColor="@color/main_color"
        android:layout_marginTop="17dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/overlap_images_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명이 궁금해하고 있어요"
        android:textSize="12sp"
        android:textColor="@color/gray_scale_8"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_people_interests"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="강남교보문구"
        android:textSize="16sp"
        android:textColor="@color/gray_scale_10"
        android:fontFamily="@font/pretend_semibold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/overlap_images_container"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/image_boombim_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        tools:src="@drawable/icon_calm_small" />

    <ImageView
        android:id="@+id/image_boombim_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/icon_calm_small"
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/image_boombim_1"
        app:layout_constraintTop_toBottomOf="@id/text_title"/>

    <ImageView
        android:id="@+id/icon_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_top_arrow"
        android:layout_marginEnd="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="@id/image_boombim_1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 🔽 그래프 전체 컨테이너 -->
    <LinearLayout
        android:id="@+id/layout_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/icon_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- calm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_calm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여유"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_9"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_calm_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/text_calm_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_calm"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="30"
            android:progress="25"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bg_calm_progress_bar"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <!-- normal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_9"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_normal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/text_normal_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_normal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="30"
            android:progress="25"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bg_normal_progress_bar"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/text_slightly_busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약간붐빔"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_9"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_slightly_busy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/text_slightly_busy_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_slightly_busy"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="30"
            android:progress="25"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bg_slightly_busy_progress_bar"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/text_busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="붐빔"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_9"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_busy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/text_busy_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명"
                android:textSize="12sp"
                android:fontFamily="@font/pretend_medium"
                android:textColor="@color/gray_scale_8" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_busy"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="30"
            android:progress="25"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bg_busy_progress_bar"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

    <Space
        android:id="@+id/space_bottom_padding"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/layout_graphs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>