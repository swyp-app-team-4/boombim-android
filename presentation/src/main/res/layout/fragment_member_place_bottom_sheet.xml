<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="15dp"
            android:src="@drawable/icon_arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/pretend_semibold"
            android:text="현장피드"
            android:textColor="@color/gray_scale_10"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:padding="11dp"
            android:src="@drawable/icon_star"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_10"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_back"
            tools:text="강남 스벅" />

        <ImageView
            android:id="@+id/icon_marker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_clock"
            app:layout_constraintStart_toStartOf="@id/text_place_name"
            app:layout_constraintTop_toBottomOf="@id/text_place_name" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="14분전"
            android:textSize="12sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/gray_scale_9"
            android:fontFamily="@font/pretend_regular"
            app:layout_constraintStart_toEndOf="@id/icon_marker"
            app:layout_constraintTop_toBottomOf="@id/text_place_name" />

        <TextView
            android:id="@+id/text_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretend_regular"
            android:textColor="@color/gray_scale_8"
            android:textSize="12sp"
            tools:text="서울특별시 강남로 331"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/icon_marker"
            app:layout_constraintStart_toEndOf="@id/text_time"/>

        <ImageView
            android:id="@+id/icon_boombim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_busy_small"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_back"/>


        <LinearLayout
            android:id="@+id/button_announce"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_radius_30_background_main_color"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/icon_marker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혼잡도 알리기"
                android:textColor="@color/white"
                android:stateListAnimator="@null"
                android:textSize="14sp"
                android:fontFamily="@font/pretend_medium"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/icon_point"/>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:background="#ECECEC"
            app:layout_constraintTop_toBottomOf="@id/button_announce"/>

        <HorizontalScrollView
            android:id="@+id/horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:layout_marginTop="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/container_congestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="68dp"
                    android:layout_height="34dp"
                    android:background="@drawable/tab_background_selector"
                    android:fontFamily="@font/pretend_regular"
                    android:layout_marginStart="16dp"
                    android:text="최신순"
                    android:gravity="center"
                    android:textColor="@color/tab_text_selector"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:text="붐빔"
                    android:gravity="center"
                    android:background="@drawable/tab_background_selector"
                    android:fontFamily="@font/pretend_regular"
                    android:textColor="@color/tab_text_selector"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="34dp"
                    android:text="약간붐빔"
                    android:gravity="center"
                    android:background="@drawable/tab_background_selector"
                    android:fontFamily="@font/pretend_regular"
                    android:textColor="@color/tab_text_selector"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:text="보통"
                    android:gravity="center"
                    android:background="@drawable/tab_background_selector"
                    android:fontFamily="@font/pretend_regular"
                    android:textColor="@color/tab_text_selector"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:text="여유"
                    android:gravity="center"
                    android:background="@drawable/tab_background_selector"
                    android:fontFamily="@font/pretend_regular"
                    android:textColor="@color/tab_text_selector"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="NotSibling" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
