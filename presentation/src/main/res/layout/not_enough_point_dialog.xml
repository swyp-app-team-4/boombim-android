<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="160dp"
    android:background="@drawable/bg_vote_dialog"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:src="@drawable/icon_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon_close"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_ticket_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포인트가 부족해요"
            android:textSize="18sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_9"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_vote_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도를 알리고 포인트를 모아보세요"
            android:textSize="12sp"
            android:fontFamily="@font/pretend_semibold"
            android:textColor="@color/gray_scale_7"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_make_congestion"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/bg_radius_30_background_main_color"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/layout_text_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도 알리고"
            android:textColor="@color/white"
            android:stateListAnimator="@null"
            android:textSize="14sp"
            android:fontFamily="@font/pretend_medium"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/icon_point"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받기"
            android:textColor="@color/white"
            android:stateListAnimator="@null"
            android:textSize="14sp"
            android:fontFamily="@font/pretend_medium"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>