<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색 (원하면 @android:color/transparent 등으로 변경) -->
    <solid android:color="#FFFAF5" />

    <!-- 테두리: 두께와 메인 컬러 -->
    <stroke
        android:width="1dp"
        android:color="@color/main_color" />

    <!-- 라운드 반경 -->
    <corners android:radius="8dp" />

    <!-- 내부 패딩(필요하면) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
